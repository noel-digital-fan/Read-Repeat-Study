<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Read_Repeat_Study.ReaderPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource OffBlack}}">

    <Grid RowSpacing="0" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <Grid Grid.Row="0" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <SearchBar x:Name="VoiceSearchBar" 
                       Placeholder="Search voices..."
                       TextChanged="OnVoiceSearchTextChanged" 
                       SearchButtonPressed="OnVoiceSearchButtonPressed" 
                       Grid.Column="0" />
            <Picker x:Name="VoicePicker" 
                    Title="Select Voice" 
                    SelectedIndexChanged="OnVoiceChanged" 
                    Focused="OnVoicePickerFocused" 
                    Grid.Column="1" />
            <Button x:Name="EditButton" 
                    Text="Edit" 
                    BackgroundColor="#60a5fa" 
                    TextColor="White" 
                    FontSize="14" 
                    CornerRadius="6" 
                    HeightRequest="40" 
                    Clicked="OnEditDocumentClicked" 
                    Grid.Column="2" />
            <Button x:Name="SaveButton" 
                    Text="Save" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" 
                    FontSize="14" 
                    CornerRadius="6" 
                    HeightRequest="40" 
                    IsVisible="False" 
                    Clicked="OnSaveDocumentClicked" 
                    Grid.Column="3" />
        </Grid>

        <!-- Reader Area -->
        <Border Grid.Row="1" 
                Stroke="{AppThemeBinding Light=Gray, Dark={StaticResource Gray600}}" 
                StrokeThickness="1"
                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray950}}" 
                Margin="0,12,0,12" 
                VerticalOptions="Fill">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Scrollable phrases (read mode) -->
                <ScrollView x:Name="PhraseScrollView" 
                            Grid.Row="0" 
                            IsVisible="True" 
                            Padding="0">
                    <VerticalStackLayout x:Name="PhraseStack" 
                                       Spacing="4" 
                                       Padding="16,8,16,16" />
                </ScrollView>

                <!-- Single editor for edit mode -->
                <Editor x:Name="PageContentEditor" 
                        Grid.Row="0" 
                        Text="" 
                        FontSize="15" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}" 
                        AutoSize="TextChanges" 
                        IsVisible="False" 
                        BackgroundColor="Transparent" 
                        Margin="16,8,16,16" />

                <!-- Navigation -->
                <Grid Grid.Row="1" 
                      ColumnSpacing="10" 
                      Padding="10" 
                      BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark={StaticResource Gray800}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="PreviousPageButton"
                            Text="◀"
                            WidthRequest="40"
                            HeightRequest="35"
                            FontSize="16"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnPreviousPageClicked"
                            Grid.Column="0" />
                    <Label x:Name="PageInfoLabel"
                           Text="Page 1 of 1"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Grid.Column="1" />
                    <Button x:Name="NextPageButton"
                            Text="▶"
                            WidthRequest="40"
                            HeightRequest="35"
                            FontSize="16"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnNextPageClicked"
                            Grid.Column="2" />
                    <Button x:Name="JumpPageButton"
                            WidthRequest="60"
                            HeightRequest="35"
                            Padding="1"
                            BackgroundColor="#fb923c"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnJumpToPageClicked"
                            Grid.Column="3"
                            ImageSource="jump_page.png" />
                </Grid>
            </Grid>
        </Border>

        <!-- Playback Controls -->
        <HorizontalStackLayout Grid.Row="2" 
                             Spacing="20" 
                             HorizontalOptions="Center" 
                             Padding="0,12,0,12">
            <Button WidthRequest="80" 
                    HeightRequest="40" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" 
                    CornerRadius="8" 
                    Clicked="OnPlayClicked">
                <Button.ImageSource>
                    <FileImageSource File="play.png" />
                </Button.ImageSource>
            </Button>
            <Button WidthRequest="80" 
                    HeightRequest="40" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" 
                    CornerRadius="8" 
                    Clicked="OnPauseClicked">
                <Button.ImageSource>
                    <FileImageSource File="pause.png" />
                </Button.ImageSource>
            </Button>
            <Button x:Name="RepeatButton" 
                    WidthRequest="80" 
                    HeightRequest="40" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" 
                    CornerRadius="8" 
                    Clicked="OnRepeatClicked">
                <Button.ImageSource>
                    <FileImageSource File="repeat.png" />
                </Button.ImageSource>
            </Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>