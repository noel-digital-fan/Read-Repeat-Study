<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Read_Repeat_Study.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Read_Repeat_Study.Pages"
    Title="Read_Repeat_Study">
    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="home" />
        <ShellContent
        Title="Flags"
        Icon="flag.png"
        ContentTemplate="{DataTemplate pages:FlagsPage}"
        Route="flags" />
    </TabBar>
    <ShellContent
      Route="AddEditFlagPage"
      ContentTemplate="{DataTemplate pages:AddEditFlagPage}"
      IsVisible="False" />
</Shell>